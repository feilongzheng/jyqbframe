<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/fill_fill"
    >

    <!-- loading -->

    <LinearLayout
        android:id="@+id/ll_loading"
        style="@style/fill_fill"
        android:layout_gravity="center"
        android:background="@color/default_layoutxml_bg"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/loading_point" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_empty"
        style="@style/wrap_wrap"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/icon_state"
            android:layout_width="180dp"
            android:layout_height="110dp"
            android:scaleType="centerInside"
            android:layout_centerHorizontal="true"
            android:src="@drawable/base_empty_default_icon" />

        <TextView
            android:id="@+id/txt_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icon_state"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="#A7A7A7"
            android:textSize="@dimen/ts_24" />

        <TextView
            android:id="@+id/txt_message_samll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_message"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textColor="#A7A7A7"
            android:textSize="@dimen/ts_24" />

        <ImageView
            android:id="@+id/icon_refesh"
            style="@style/wrap_wrap"
            android:layout_below="@+id/txt_message_samll"
            android:layout_marginTop="30dp"
            android:src="@drawable/base_empty_refresh_icon"
            android:layout_centerHorizontal="true"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>